extends ../layout.pug
block content
    div(class="w3-margin-top w3-content")
        h1 Asociados
        form(method="post", action="/asociados/nuevo")
            p
                input(type="hidden", value=password, name="password")
                input(value="Crear nuevo asociado", type='submit', class="w3-btn w3-block w3-red")
        table(class="w3-table-all w3-centered")
            thead
                tr(class="w3-red")
                    th Nombre
                    th Apellido
                    th Email
                    th Telefono
                    th Puesto
                    th Modificar
                    th Eliminar
                tbody
                    each aso in asociados
                        tr
                            td= aso.nombre
                            td= aso.apellido
                            td= aso.email
                            td= aso.telefono
                            td= aso.puesto
                            td
                                a(href="/asociados/modificar/" + aso._id) Modificar
                            td
                                a(href="/asociados/eliminar/" + aso._id) Eliminar