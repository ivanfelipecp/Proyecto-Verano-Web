extends ../layout.pug
block content
    div(class="w3-margin-top w3-content")
        h1 Destinos
        form(method="post", action="/destinos/nuevo")
            p
                input(type="hidden", value=password, name="password")
                input(value="Crear nuevo destino", type='submit', class="w3-btn w3-block w3-red")
        table(class="w3-table-all w3-centered")
            thead
                tr(class="w3-red")
                    th Nombre
                    th Provincia
                    th Fotos
                    th Modificar
                    th Eliminar
                tbody
                    each d in destinos
                        tr
                            td= d.nombre
                            td= d.provincia
                            td
                                div(class="w3-content w3-display-container")
                                    each f in d.fotos
                                        center
                                            img(class=d.nombre, src=f, style="width:40%")
                            td
                                a(href="#" + d._id) Modificar
                            td
                                a(href="/destinos/eliminar/" + d._id) Eliminar
