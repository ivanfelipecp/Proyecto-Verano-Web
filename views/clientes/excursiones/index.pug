extends ../layout.pug
block content
    div(class="w3-margin-top w3-content")
        #wrap
            #columns.columns_2

                each exc in excursiones
                    figure
                        //img(src='!{exc.destinos.fotos[0]}')
                        img(src='http://3.bp.blogspot.com/-hv5K7Uta4yI/TZaYygShOXI/AAAAAAAAASw/cLoXmO3KaLY/s1600/DSC_6850.jpg')
                        //figcaption !{exc.cantMaxPersonas}
                        figcaption Tour a !{exc.destino.nombre}, !{exc.destino.provincia}
                        p Fecha de Salida: !{exc.fechaHoraSalida}
                        p Fecha de Regreso: !{exc.fechaHoraVuelta}
                        p Campos disponibles: !{exc.cantMaxPersonas}
                        p Lugares de abordaje:
                        ul
                            each lugar in exc.lugaresDeAbordaje
                                li !{lugar}
                        p Guía: !{exc.guia.nombre}
                        p Servicios incluidos:
                        ul
                            each comida in exc.comidas
                                li !{comida}
                        p Fecha límite de pago: !{exc.fechaLimitePago}

                        span.price
                                        | Niños ₡ !{exc.costos[0]}
                                        br
                                        | Regular ₡ !{exc.costos[1]}
                                        br
                                        | Adulto mayor ₡ !{exc.costos[2]}
                        a.button(href='/reservaciones/crear/'+exc._id) Reservar
                    



