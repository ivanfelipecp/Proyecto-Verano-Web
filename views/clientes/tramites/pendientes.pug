extends ../layout.pug
block content
    div(class="w3-margin-top")
        h1 Reservaciones                    
        table(class="w3-table-all")
            thead
                tr(class="w3-red")                    
                    th Codigo de reserva
                    th turísta                    
                    th Cédula
                    th tipo turísta
                    th estado
                    th Pago
                tbody
                    each e in reservaciones
                        tr
                            td= e.codigo
                            td= e.nombre                           
                            td= e.cedula
                            if e.tipoTurista=="0"
                                td= "Niño"
                            else if e.tipoTurista=="1"    
                                td= "Regular"
                            else
                                td= "Adulto mayor"    
                            td= e.estado  
                            td
                                a(href="/tramites/pago/"+e._id) Pagar