block content
    div(class="w3-display-middle")
        h1 Crear Asociado
        form(method="post", action="/excursiones/crear/")
            p
                label Guia
                select(class="w3-select" name='guia')
                  each c in guias
                      option(value=c._id)= c.nombre
            p
                label Chofer
                select(class="w3-select" name='chofer')
                  each c in choferes
                      option(value=c._id)= c.nombre
            p
                label Microbus(es)
                select(class="w3-select" name='microbuses')
                  each c in microbuses
                      option(value=c._id)= c.nombre
            p
                label Capacidad Maxima
                input(name="capacidad", type='text', class="w3-input")
            p
                label Fecha/hora salida
                input(type='datetime', name='fechaSalida')
            p
                label Fecha/hora llegada
                input(type='datetime', name='fechaEntrada')
            p
                label Costos
                input(type='number', placeholder='Ni√±os')
                input(type='number', placeholder='Adultos')
                input(type='number', placeholder='Tercera edad')
            p
                label Lugar(es) de abordaje
                input(type='text', class="w3-button w3-red ")
                input(type="button", id="agregaLugar", class="w3-button w3-blue ", value="Agregar lugar")
                input(id="lugares" name="lugares", type='hidden')
            p
                label Comida(s)
                input(type='text', placeholder='Nombre')
                input(type='number', placeholder='Precio')
