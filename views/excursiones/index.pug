extends ../layout.pug
block content
    div(class="w3-margin-top w3-content")
        h1 microbuses
        table(class="w3-table-all w3-centered")
            thead
                tr(class="w3-red")
                    th Guia
                    th Chofer
                    th Microbus(es)
                    th Capacidad Maxima
                    th Fecha/hora salida
                    th Fecha/hora llegada
                    th Lugar(es) de abordaje
                    th Comida(s)
                tbody
                    each m in microbuses
                        tr
                            td= m.propietario.nombre
                            td= m.estadoMecanico
                            td
                              ul
                                each s in m.servicios
                                  li= s
                            td
                                a(href="/microbuses/modificar/" + m._id) Modificar
                            td
                                a(href="/microbuses/eliminar/" + m._id) Eliminar
